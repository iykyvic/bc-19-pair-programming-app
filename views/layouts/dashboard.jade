	script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js")
	script(src="https://cdn.firebase.com/libs/firechat/3.0.1/firechat.min.js")
	script(src="/js/dashboard.js")
		
