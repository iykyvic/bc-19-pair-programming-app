extends ../bootstrap
append styles
	// Custom styles for this template
	link(href='../css/dashboard.css', rel='stylesheet')
	link(href='https://cdn.firebase.com/libs/firepad/1.4.0/firepad.css', rel='stylesheet')
	link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/css/bootstrap-select.min.css', rel='stylesheet')
	link(href="../css/firechat.css", rel="stylesheet")
block body 
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') Pair
			#navbar
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/') Home
					li
						a(href='/about') About
					li
						a(href='/dashboard') Dashboard
					li
						a#reg(href='#') Logout
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li.active
						a(data-toggle="tab" href='#code')
							| Code Editor
							span.sr-only (current)
					li
						a(data-toggle="tab" href='#messages') Messages/Chat
					li
						a(data-toggle="tab" href='#pairsessions') Pair Sessions

			#main-pad.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				div.tab-content
					div#code.tab-pane.active
						p#alertlang 
						form#create.form-inline
							div.form-group
								label.sr-only(for='language')
								select#language.selectpicker(data-live-search="true" title="Select Language")
									option abap
									option abc
									option actionscript
									option ada
									option apache_conf
									option applescript
									option asciidoc
									option assembly_x86
									option autohotkey
									option batchfile
									option c9search
									option c_cpp
									option cirru
									option clojure
									option cobol
									option coffee
									option coldfusion
									option csharp
									option css
									option curly
									option d
									option dart
									option diff
									option django
									option dockerfile
									option dot
									option drools
									option eiffel
									option ejs
									option elixir
									option elm
									option erlang
									option forth
									option fortran
									option html
									option java
									option json
									option(selected="selected") javascript
									option lean
									option less
									option matlab
									option mysql
									option objectivec
									option perl
									option php
									option powershell
									option python
									option ruby
									option rhtml
									option sass
									option text
									option xml
								//select#users.selectpicker(data-live-search="true" title="Add Collaborators" multiple)
						a#pair.btn.btn-primary(href="/dashboard") Create Coding Session
						div#sharelinks | share link: 
									a#linked(href="")
						div#firepad-container
					div#messages.tab-pane
						div#firechat-wrapper
					div#pairsessions.tab-pane
						div
							table.table
								thead
									tr
										//th language
										th session share link
										th visit
										th delete
								tbody#sessionlinks
	img#message(src="/images/message.png" alt="send message" width="60" height="60" data-toggle="modal" data-target="#mymodal")
	div#mymodal.modal.fade
		div.modal-dialog
			div.modal-content
				div.modal-header
					button(type="button" class="close" data-dismiss="modal" aria-hidden="true") Ã—
					h4.modal-title How to Use Pair
				div.modal-body
					p 1. load the dashboard page and share generated session links via chat to collaborators
					p 2. create new session using the create session button and share links using the chat

